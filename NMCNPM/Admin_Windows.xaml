<Window x:Class="NMCNPM.Admin_Windows"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NMCNPM"
        mc:Ignorable="d"
       Background="#6695ed"
        MinHeight="700" 
        MinWidth="1050"
        WindowStartupLocation="CenterScreen"
        Icon="icon/window.png"
        Height="354"                               
        Width="1103"
        WindowStyle="None"
        Title="Quản trị"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip"
        >


    <Border CornerRadius="50" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">

        <Grid>
            <TabControl x:Name="Tabcontrol" Margin="0,0,0,0" BorderBrush ="Gainsboro" TabStripPlacement="Top"  FontSize="16" SelectionChanged="TabControl_SelectionChanged">
                <!--Định dạng memu-->
                <TabControl.Resources >
                    <Style TargetType="TabItem" >
                        <Setter Property="Template" >
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem"  >
                                    <Border Name="Border" BorderThickness="0"  BorderBrush="Gainsboro" CornerRadius="4" Margin="2,3,4,3">
                                        <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="15,15, 15, -10"
                                        Height="50" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="Navy" />
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter TargetName="Border" Property="Background" Value="#6695ed" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>





                <TabItem Loaded="Tt_loaded">
                    <TabItem.Header>
                        <!--<TextBlock Text="Tang chủ"  FontSize="18" Foreground="White" FontWeight="Medium"    />-->
                        <Image Source="icon/home.png" Height="40" Width="40" Margin="0,-25,0,0"/>
                    </TabItem.Header>
                    <Grid  Style="{StaticResource MyStyle_GridBackground}" >
                        <MediaElement x:Name="Dashboard_media" Source="../../icon/edtech_lower.gif" MediaEnded="Dashboard_media_MediaEnded" />

                    </Grid>
                    <!--Hết item Thông tin-->
                </TabItem>


                <TabItem >
                    <TabItem.Header>
                        <TextBlock Text="Tài khoản"  FontSize="18" Foreground="White" FontWeight="Medium"    />
                    </TabItem.Header>

                    <Grid Background="WhiteSmoke">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>


                        <Grid Grid.Column="1" Grid.Row="1">

                            <Border Height="50" Width="400" BorderBrush="LightGray" HorizontalAlignment="Left" BorderThickness="1" Background="White">
                                <Grid VerticalAlignment="Center">
                                    <TextBlock x:Name="Tk_lb_search" Text="Tìm kiếm...." Background="Transparent" VerticalAlignment="Center" Margin="20,0"/>
                                    <TextBox x:Name="Tk_tb_search" 
                                         TextChanged="Tk_tb_search_TextChanged"  Background="Transparent" Margin="20,0" BorderThickness="0"/>

                                </Grid>
                            </Border>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" >
                            <Label Content="Danh sách tài khoản" Style="{StaticResource MyStyle_Label_Title}" FontSize="24"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label x:Name="Tk_lb_errorout" 
                               Content=""
                               HorizontalAlignment="Right" 
                                   FontWeight="Medium"
                               Style="{StaticResource MyStyle_Label}"
                               VerticalAlignment="Top" />
                        </Grid>



                        <Grid Grid.Column="1" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="272*"/>
                                <ColumnDefinition Width="267*"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox x:Name="Tk_Combobox_role" ItemsSource="{Binding}" Margin="0,0,0,0"  Width="180" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True" SelectionChanged="Tk_Combobox_role_SelectionChanged"/>
                            <Button Content="Xoá" Style="{StaticResource MyStyle_Button_Xoa}" Margin="0,0,180,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="Tk_button_xoa_Click" Grid.Column="1"/>
                            <Button Content="Sửa" Style="{StaticResource MyStyle_Button_Sua}" HorizontalAlignment="Right" Margin="0,0,90,0" VerticalAlignment="Top" 
                                Click="Tk_button_sua_Click" Grid.Column="1"/>
                            <Button x:Name="Tk_button_them" Content="Thêm" Style="{StaticResource MyStyle_Button_Them}"  HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="Tk_button_them_Click" Grid.Column="1"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="3">
                            <DataGrid x:Name="Tk_datagird" 
                                  Loaded="Tk_datagird_Loaded"
                                  AutoGenerateColumns="False"
                                      
                                      
                                  Background="White" CanUserAddRows="False">
                                <DataGrid.Columns >
                                    <DataGridTextColumn Header="Mã" Binding="{Binding MaHS, Mode=OneWay}"/>
                                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen, Mode=OneWay}"  Width="4*"  />
                                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh,StringFormat=\{0:dd/MM/yyyy\}, Mode=OneWay}"  Width="2*"  />
                                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh, Mode=OneWay}"  Width="1*"  />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email, Mode=OneWay}"  Width="4*"  />
                                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT, Mode=OneWay}"  Width="2*"  />
                                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi, Mode=OneWay}"  Width="4*"  />
                                    <DataGridTextColumn x:Name="Tk_column_monday" Header="Môn dạy" Binding="{Binding MonDay, Mode=OneWay}"  Width="2*"  />
                                    <DataGridTextColumn Header="Username" Binding="{Binding username, Mode=OneWay}"  Width="2*"  />
                                    <DataGridCheckBoxColumn CanUserSort="False"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Grid>

                </TabItem>
                <TabItem Loaded="Lh_Load">
                    <TabItem.Header>
                        <TextBlock Text="Lớp học"  FontSize="18" Foreground="White" FontWeight="Medium"    />
                    </TabItem.Header>
                    <Grid Background="WhiteSmoke">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Column="1" Grid.Row="1">

                            <Border Height="50" Width="400" BorderBrush="LightGray" HorizontalAlignment="Left" BorderThickness="1" Background="White">
                                <Grid VerticalAlignment="Center">
                                    <TextBlock x:Name="Lh_lb_search" Text="Tìm kiếm...." Background="Transparent" VerticalAlignment="Center" Margin="20,0"/>
                                    <TextBox x:Name="Lh_tb_search" 
                                         TextChanged="Lh_tb_search_TextChanged"  Background="Transparent" Margin="20,0" BorderThickness="0"/>

                                </Grid>
                            </Border>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" >
                            <Label Content="Danh sách lớp" Style="{StaticResource MyStyle_Label_Title}" FontSize="24"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Label x:Name="Lh_lb_errorout" 
                               Content=""
                               HorizontalAlignment="Right"            
                                   FontWeight="Medium"
                               Style="{StaticResource MyStyle_Label}"
                               VerticalAlignment="Top" />
                        </Grid>



                        <Grid Grid.Column="1" Grid.Row="2">
                            <ComboBox x:Name="Lh_Combobox_dsnam" ItemsSource="{Binding}" Margin="0,0,0,0"  Width="180" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True" SelectionChanged="Lh_Combobox_dsnam_SelectionChanged" />
                            <ComboBox x:Name="Lh_Combobox_dslop" ItemsSource="{Binding}" Margin="200,0,0,0"  Width="120" Style="{StaticResource MyStyle_ComboBox_TT}"
                                AllowDrop="True" SelectionChanged="Lh_Combobox_dslop_SelectionChanged" />
                            <Button x:Name="Lh_button_them" Content="Thêm" Style="{StaticResource MyStyle_Button_Them}" Margin="90,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="Lh_button_them_Click"/>
                            <Button x:Name="Lh_button_xoa" Content="Xoá" Style="{StaticResource MyStyle_Button_Xoa}" Margin="90,0" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Click="Lh_button_xoa_Click"/>
                            <Button Content="Refresh" Style="{StaticResource MyStyle_Button_Sua}" HorizontalAlignment="Right"  VerticalAlignment="Top" 
                                Click="Lh_button_refresh_Click"/>
                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="3">
                            <DataGrid x:Name="Lh_datagird_dshocsinh" 
                                  Loaded="Lh_datagird_dshocsinh_Loaded"
                                  AutoGenerateColumns="False"
                                  Background="White" CanUserAddRows="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã học sinh" Binding="{Binding MaHS}"   />
                                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}"  Width="4*"  />
                                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh,StringFormat=\{0:dd/MM/yyyy\}}"  Width="2*"  />
                                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}"  Width="1*"  />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"  Width="4*"  />
                                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}"  Width="2*"  />
                                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}"  Width="4*"  />
                                    <DataGridCheckBoxColumn CanUserSort="False"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>

                    </Grid>
                </TabItem>
                <TabItem >
                    <TabItem.Header>
                        <TextBlock Text="Tra cứu"  FontSize="18" Foreground="White" FontWeight="Medium"    />
                    </TabItem.Header>
                    <Grid Background="WhiteSmoke"  >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="10"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="10"/>
                        </Grid.RowDefinitions>


                        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" >
                            <Label Content="Danh sách lớp" Style="{StaticResource MyStyle_Label_Title}" FontSize="24"
                               HorizontalAlignment="Center" VerticalAlignment="Bottom"/>
                            <Label x:Name="Tc_lb_errorout" 
                               Content=""                                   
                                   FontWeight="Medium"
                               HorizontalAlignment="Right" 
                               Style="{StaticResource MyStyle_Label}"
                               VerticalAlignment="Top" />
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="2">

                            <Border Height="50" BorderBrush="LightGray" BorderThickness="1" Background="White">
                                <Grid VerticalAlignment="Center">
                                    <TextBlock x:Name="Tc_lb_search" Text="Tìm kiếm...." Background="Transparent" VerticalAlignment="Center" Margin="20,0"/>
                                    <TextBox x:Name="Tc_tb_search" 
                                         TextChanged="Tc_tb_search_TextChanged"  Background="Transparent" Margin="20,0" BorderThickness="0"/>

                                </Grid>
                            </Border>

                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="3">
                            <DataGrid x:Name="Tc_datagrid_searchresult" Background="White" Loaded="Tc_datagrid_searchresult_Loaded"  
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False" IsReadOnly="True">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Role" Binding="{Binding ChucDanh}"  />
                                    <DataGridTextColumn Header="Mã" Binding="{Binding MaHS}"/>
                                    <DataGridTextColumn Header="Họ tên" Binding="{Binding HoTen}"  Width="4*"  />
                                    <DataGridTextColumn Header="Ngày sinh" Binding="{Binding NgaySinh,StringFormat=\{0:dd/MM/yyyy\}}"  Width="2*"  />
                                    <DataGridTextColumn Header="Giới tính" Binding="{Binding GioiTinh}"  Width="1*"  />
                                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"  Width="4*"  />
                                    <DataGridTextColumn Header="SĐT" Binding="{Binding SDT}"  Width="2*"  />
                                    <DataGridTextColumn Header="Địa chỉ" Binding="{Binding DiaChi}"  Width="4*"  />
                                    <DataGridTextColumn Header="Môn dạy" Binding="{Binding MonDay}"  Width="2*"  />
                                    <DataGridTextColumn Header="Username" Binding="{Binding username}"  Width="2*"  />
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="Tc_button_tracuu_click" BorderThickness="0" Background="Transparent">
                                                    <Image Source="icon/view.png" Height="20"/>
                                                </Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="250"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="20"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid Grid.Column="1" Grid.Row="2">

                            </Grid>
                        </Grid>

                    </Grid>



                </TabItem>



                <!--Bắt đầu tab Bảng Điểm-->
                <TabItem Loaded="Bd_loaded" >
                    <TabItem.Header>
                        <TextBlock Text="Bảng điểm"  FontSize="18" Foreground="White" FontWeight="Medium"    />
                    </TabItem.Header>
                    <Grid Background="WhiteSmoke">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="800"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="100"/>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="50"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Background="White">

                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" >
                            <Label Content="Bảng điểm" Style="{StaticResource MyStyle_Label_Title}" FontSize="28"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            <Button x:Name="Bd_bt_in" Content="In" Width="100" Style="{StaticResource MyStyle_Button_In}" Margin="0,0,20,0" HorizontalAlignment="Right" Click="Bd_in_click"/>

                        </Grid>
                        <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" >
                            <Label Content="Năm học" Margin="20,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"  />
                            <Label Content="Lớp" Margin="220,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"/>
                            <Label Content="Kì" Margin="420,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"  />
                            <Label Content="Môn học" Margin="620,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"  />
                            <Label Content="Vui lòng chọn đủ cả 4 trường thông tin" Margin="20,65,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="13" FontStyle="Italic" />

                            <ComboBox x:Name="Bd_cb_namhoc"  ItemsSource="{Binding}" Margin="20,30,0,0"  Width="130" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True" SelectionChanged="Bd_cb_namhoc_changed"/>

                            <ComboBox x:Name="Bd_cb_lop" ItemsSource="{Binding}" Margin="200,30,0,0"  Width="130" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True"/>
                            <ComboBox x:Name="Bd_cb_kihoc"  Margin="380,30,0,0"  Width="130" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True">
                                <ComboBoxItem Content="1"/>
                                <ComboBoxItem Content="2" />
                            </ComboBox>
                            <ComboBox x:Name="Bd_cb_mon" ItemsSource="{Binding}" Margin="560,30,0,0"  Width="130" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True"/>
                            <Button Content="Xem" Width="100" Style="{StaticResource MyStyle_Button_Them}" Margin="740,-5,0,0" HorizontalAlignment="Left" Click="Bd_timkiem_click"/>
                            <Button Content="Refresh" Width="100" Style="{StaticResource MyStyle_Button_Sua}" Margin="0,-5,20,0" HorizontalAlignment="Right" Click="Bd_refresh_click"/>

                        </Grid>

                        <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" >

                            <DataGrid x:Name="Bd_datagird_tonghop" 
                                  Margin="20,20,20,20"
                                  AutoGenerateColumns="False"
                                  Loaded="Bd_datagrid_loaded"
                                  Background="White"
                                  IsReadOnly="True">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã học sinh" Binding="{Binding MaHocSinh}" Width="*" />
                                    <DataGridTextColumn Header="Tên môn"  Binding="{Binding TenMon}" Width="*"  />
                                    <DataGridTextColumn Header="Năm"  Binding="{Binding Nam}" Width="*" />
                                    <DataGridTextColumn Header="Học kì" Binding="{Binding KiHoc}" Width="*" />
                                    <DataGridTextColumn Header="Điểm 15p" Binding="{Binding Diem15}"  Width="*"  />
                                    <DataGridTextColumn Header="Điểm 1 tiết" Binding="{Binding Diem1Tiet}"  Width="*"  />
                                    <DataGridTextColumn Header="Điểm cuối kì" Binding="{Binding DiemCuoiKi}"  Width="*"  />

                                </DataGrid.Columns>
                            </DataGrid>
                            <DataGrid x:Name="Bd_timkiem_datagird" 
                                  Margin="20,20,20,20"
                                  AutoGenerateColumns="False"
                                  Loaded="Bd_timkiem_datagird_loaded"
                                  Background="White"
                                  IsReadOnly="True">

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Mã học sinh" Binding="{Binding MaHocSinh}"  Width="*" />
                                    <DataGridTextColumn Header="Tên học sinh" Binding="{Binding HoTen}"  Width="*"  />

                                    <DataGridTextColumn Header="Điểm 15p" Binding="{Binding Diem15}"  Width="*"  />
                                    <DataGridTextColumn Header="Điểm 1 tiết" Binding="{Binding Diem1Tiet}"  Width="*"  />
                                    <DataGridTextColumn Header="Điểm cuối kì" Binding="{Binding DiemCuoiKi}"  Width="*"  />

                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                        <Grid Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="39*"/>
                                <ColumnDefinition Width="5*"/>
                                <ColumnDefinition Width="264*"/>
                            </Grid.ColumnDefinitions>
                            <Label x:Name="Bd_errorout"  
                               Content=""                    
                                   FontWeight="Medium"
                               Margin="0,0,0,4.6"
                               Style="{StaticResource MyStyle_Label}" 
                               HorizontalAlignment="Right" 
                               VerticalAlignment="Bottom" Grid.Column="2"/>
                        </Grid>

                    </Grid>
                </TabItem>
                <!--Kết thúc bảng điểm-->

                <!--Bắt đầu tổng kết-->

                <TabItem Loaded="Tongket_loaded">
                    <TabItem.Header>
                        <TextBlock Text="Tổng kết"  FontSize="18" Foreground="White" FontWeight="Medium"    />
                    </TabItem.Header>
                    <TabControl Margin="10,10,10,0" BorderBrush ="Gainsboro">
                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Name="Border" BorderThickness="1,1,1,0" BorderBrush="Gainsboro" CornerRadius="4,4,0,0" Margin="2,0">
                                                <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Border" Property="Background" Value="#9ac5e5" />
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="False">
                                                    <Setter TargetName="Border" Property="Background" Value="GhostWhite" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <TabItem Header="Tổng kết theo môn" Loaded="Tk_lop_loaded">
                            <Grid Background="WhiteSmoke">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="800"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition Height="100"/>
                                    <RowDefinition Height="70"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="50"/>
                                </Grid.RowDefinitions>
                                <Grid Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="3" Background="White">

                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" >
                                    <Label Content="Bảng tổng kết môn học" Style="{StaticResource MyStyle_Label_Title}" FontSize="28"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    <Button x:Name="Tk_mon_bt_in" Content="In" Width="120" Style="{StaticResource MyStyle_Button_In}" Margin="0,0,20,0" HorizontalAlignment="Right" Click="Tk_mon_in_click"/>

                                </Grid>
                                <Grid Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="3" >
                                    <Label Content="Năm học" Margin="20,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"  />
                                    <Label Content="Kì" Margin="280,5,0,0"  Style="{StaticResource MyStyle_Label}" FontSize="14"  />

                                    <ComboBox x:Name="Tk_mon_cb_namhoc"  ItemsSource="{Binding}" Margin="20,30,0,0"  Width="180" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True" SelectionChanged="Bd_cb_namhoc_changed"/>

                                    <ComboBox x:Name="Tk_mon_cb_kihoc"  Margin="280,30,0,0"  Width="180" Style="{StaticResource MyStyle_ComboBox_TT}"
                                  AllowDrop="True">
                                        <ComboBoxItem Content="1"/>
                                        <ComboBoxItem Content="2" />
                                    </ComboBox>
                                    <Button Content="Xem" Width="120" Style="{StaticResource MyStyle_Button_Them}" Margin="590,-5,0,0" HorizontalAlignment="Left" 
                                            Click="Tk_mon_timkiem_click"/>
                                    <Button Content="Refresh" Width="120" Style="{StaticResource MyStyle_Button_Sua}" Margin="0,-5,20,0" HorizontalAlignment="Right" Click="Tk_mon_refresh_click"/>

                                </Grid>

                                <Grid Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="3" >

                                    <DataGrid x:Name="Tk_mon_datagird" 
                                  Margin="20,20,20,20"
                                  AutoGenerateColumns="False"
                                
                                  Background="White"
                                  IsReadOnly="True">

                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="Năm học" Binding="{Binding Nam}" Width="*" />
                                            <DataGridTextColumn Header="Kì học"  Binding="{Binding KiHoc}" Width="*"  />
                                            <DataGridTextColumn Header="Tên môn học"  Binding="{Binding TenMon}" Width="*" />
                                            <DataGridTextColumn Header="Số người học" Binding="{Binding SiSo}" Width="*" />
                                            <DataGridTextColumn Header="Số người đạt" Binding="{Binding SoNguoiDat}"  Width="*"  />
                                            <DataGridTextColumn Header="Tỉ lệ đạt(%)" Binding="{Binding TiLeDat}"  Width="*"  />
                                            <DataGridTextColumn Header="Điểm trung bình" Binding="{Binding DTB}"  Width="*"  />

